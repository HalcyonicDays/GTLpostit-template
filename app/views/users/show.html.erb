<%= render '/shared/content_title', title: "Posts by #{@user.username}" %>


<ul class="nav nav-tabs">
  <li class='active'><a data-toggle="tab" href="#Posts">Posts (<%= @user.posts.size %>)</a></li>
  <li><a data-toggle="tab" href="#Comments">Comments  (<%= @user.comments.size %>)</a></li>
</ul>


<div class="tab-content">
  <div class="tab-pane fade in active" id="Posts">
    <% @user.posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </div>

  <div class="tab-pane fade" id="Comments">
    <% @user.comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment, show_post: true %>
    <% end %>
  </div>

</div>